<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="652dp"
        android:layout_height="426dp"


        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-70dp"
        android:src="@drawable/untitled_1" />

    <Button
        android:id="@+id/signinButton"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/registerButtonnn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="445dp"
        android:layout_marginBottom="65dp"
        android:background="#00FF0D"
        android:text="Sign In" />

    <EditText
        android:id="@+id/emailTextView"
        android:layout_width="251dp"
        android:layout_height="51dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:hint="Email"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/passwordTextView"
        android:layout_width="251dp"
        android:layout_height="51dp"
        android:layout_alignBottom="@+id/signinButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:layout_marginBottom="64dp"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/registerButtonnn"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/emailTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:background="#179BF3"
        android:text="Register" />

</RelativeLayout>